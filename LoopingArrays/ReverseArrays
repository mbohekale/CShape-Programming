using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Looping.cs
{
    class Program
    {
        static void Main(string[] args)
        {
            string zig = "My house is in Budapest";

            char[] charArrays = zig.ToCharArray();
            Array.Reverse(charArrays);

            foreach (char zigChar in charArrays) 
            {
                Console.Write(zigChar);
            }        
            
           Console.ReadLine();
        }
    }
}
